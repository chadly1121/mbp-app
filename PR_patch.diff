+describe('safeDate', () => {
+  it('handles null/invalid/valid', () => {
+    expect(safeDate(null)).toBe(Number.POSITIVE_INFINITY);
+    expect(safeDate('invalid')).toBe(Number.POSITIVE_INFINITY);
+    expect(Number.isFinite(safeDate(new Date()))).toBe(true);
+  });
+});
+
